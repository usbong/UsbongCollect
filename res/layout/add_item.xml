<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/bg_contrast"
	android:orientation="vertical"
>
	<FrameLayout 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:background="@drawable/brand_bg">
	    <ImageView android:id="@+id/brand_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/brand_logo"				    
		/>
		<TextView
	        android:text="@string/brand_motto"
	        android:textSize="18sp"
	        android:textStyle="bold"
	        android:textColor="#6f5630"
	        android:layout_height="fill_parent"
	        android:layout_width="fill_parent"
	        android:layout_gravity="center_vertical"
	        android:gravity="right"/>				
	</FrameLayout>
	<ScrollView style="@style/UsbongDefaultScrollView"
	>		 	
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
		   	<EditText
	        style="@style/UsbongLoginEditText"
	        android:id="@+id/book_title"
	        android:hint="Book Title"
	        android:background="@drawable/rect_text_edit"
	        android:textColorHint="#9a9898"
	        android:padding="5dp"        
	        android:layout_marginTop="5dp"        
			/>
		   	<Button android:id="@+id/photo_capture_button"
			    style="@style/UsbongPhotoCaptureButton"	    	
			    android:text="Take Photo of Book" 
			    android:layout_marginTop="14dp"/>
		   	<ImageView android:id="@+id/CameraImage"
				style="@style/UsbongCameraImageView"
				android:layout_marginTop="14dp"
				android:layout_marginBottom="14dp"
				android:layout_gravity="center_horizontal"
				android:contentDescription="book photo"/>		   			   	
		   	<EditText
	        style="@style/UsbongLoginEditText"
	        android:id="@+id/first_name_of_principal_author"
	        android:hint="First Name of Principal Author"
	        android:background="@drawable/rect_text_edit"
	        android:textColorHint="#9a9898"
	        android:padding="5dp"        
	        android:layout_marginTop="5dp"        
			/>
			<EditText
		        style="@style/UsbongLoginEditText"
		        android:id="@+id/surname_of_principal_author"
		        android:hint="Surname of Principal Author"
		        android:background="@drawable/rect_text_edit"
		        android:textColorHint="#9a9898"
		        android:padding="5dp"        
		        android:layout_marginTop="5dp"        
			/>
			<EditText
		        style="@style/UsbongLoginEditText"
		        android:id="@+id/price"
		        android:hint="Price"
		        android:background="@drawable/rect_text_edit"
		        android:textColorHint="#9a9898"
		        android:padding="5dp"        
		        android:layout_marginTop="5dp"        
			/>
			<TextView
		        style="@style/UsbongLoginEditText"
		        android:id="@+id/language"
		        android:text="-Language-"
		        android:textColor="#6f5630"
		        android:textStyle="bold"		        
		        android:padding="5dp"        
		        android:layout_marginTop="5dp"        
			/>									
			<RadioGroup
			    android:id="@+id/language_radiogroup"
			    style="@style/UsbongLoginEditText"	
			    android:padding="5dp"        
		        android:layout_marginTop="5dp"  	
		        android:orientation="vertical"    
		        android:layout_width="wrap_content"	        
			    >
			    <RadioButton
			        android:id="@+id/meetup_radiobutton"	               
			    	style="@style/UsbongLoginEditText"	
			        android:text="English"
			        android:textColor="#6f5630"
		        	android:textStyle="bold"		        
			        />
			    <RadioButton
			        android:id="@+id/shipping_radiobutton"	               
			        style="@style/UsbongLoginEditText"	 
			        android:text="Other"
			        android:textColor="#6f5630"
		        	android:textStyle="bold"		        
			        />
			</RadioGroup>
			<EditText
		        style="@style/UsbongTextAreaEditText"	
		        android:id="@+id/other_language"
		        android:hint="Language, if not English"
		        android:textColorHint="#9a9898"
		        android:padding="5dp"        
		        android:layout_marginTop="5dp"
		        android:lines="4"
		        android:textSize="18dp"
		        android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
			/>
		</LinearLayout>			
	</ScrollView>	
	<LinearLayout
		style="@style/UsbongDefaultBuySellRequestButtonLayout">	
		<Button android:id="@+id/add_button"
		    style="@style/UsbongDefaultBuySellRequestButton"
			android:text="@string/add" 
			android:layout_width="256dp"
			android:background="@drawable/button_yellow"/>		    
	</LinearLayout>		
</LinearLayout>